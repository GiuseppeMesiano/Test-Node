<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>E-Commerce Store</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">
</head>
<body class="bg-gray-100">
  <header class="bg-green-500 p-4">
    <h1 class="text-white text-2xl text-center">Welcome to E-Commerce Store</h1>
  </header>
  
  <div class="container mx-auto px-4 py-8">
    <h2 class="text-2xl font-semibold mb-4">Products</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% products.forEach(product => { %>
        <a href="/products/<%= product.name %>" class="bg-white rounded-lg shadow-md p-4 transition transform hover:scale-105">
          <img src="/<%= product.image %>" alt="<%= product.name %>" class="mx-auto mb-4">
          <h3 class="text-lg font-semibold mb-2"><%= product.name %></h3>
          <p class="text-gray-500 mb-2"><%= product.description %></p>
          <p class="text-green-500 font-semibold">$<%= product.price.toFixed(2) %></p>
        </a>
      <% }); %>
    </div>
  </div>
</body>
</html>
